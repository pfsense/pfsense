require_once('globals.inc');
require_once('system.inc');

$logfile = $argv[1];

if (!empty($logfile)) {
	passthru(system_log_get_cat() . ' ' . sort_related_log_files($logfile, true, true));
} else {
	echo sprintf(gettext("Usage: %s /path/to/file.log"), $argv[0]);
}
