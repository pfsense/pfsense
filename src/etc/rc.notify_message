require_once("config.inc");
require_once("functions.inc");
require_once("notices.inc");

$arguments = getopt("em:");

$send_email = false;
$message = "";

foreach ($arguments as $item => $arg) {
	switch ($item) {
		case "e":
			$send_email = true;
			break;
		case "m":
			$message = $arg;
			break;
	}
}

if ($message) {
	if ($send_email) {
		notify_all_remote($message);
	}
}

?>
